        <%= form_tag(events_path, method: :get) do %>
          <div class="row justify-content-center form-group">
            <%= text_field_tag :search, params[:search], class: 'form-control banner-searchbar col-11', placeholder: 'Location' %>
          </div>
          <div class="row justify-content-center banner-search">
                <% @vibes.each do |vibe| %>
                  <div class="d-flex justify-content-center pt-4 col-1 mx-3 p-2">
                    <div class="vibes clickable">
                      <%= image_tag(vibe.icon) %>
                      <%= radio_button_tag :vibe_id, vibe.id, (vibe.id), class:"radio_item" %>
                      <%= label_tag(vibe.id, vibe.name, class:"label_item")  %>
                    </div>
                  </div>
                <% end %>
          </div>

          <div class="row justify-content-center my-2">
            <%= submit_tag 'Go Find Events!', name: nil, class: "btn btn-info btn-search" %>
          </div>
        <% end %>
