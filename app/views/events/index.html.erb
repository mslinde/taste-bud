<%= render 'shared/banner' %>


<div class="container">
  <h1>TasteBudd Events Around the World</h1>
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-sx-12 col-sm-6 col-md-4 col-lg-4">
        <div class="card-trip">
          <img src="https://source.unsplash.com/random" alt="Event image">
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to event.title, event_path(event) %></h2>
            </div>
            <div class="card-trip-pricing">
              <p> Created by <%= event.user.full_name %> </p>
            </div>
            <div class="card-trip-user">
              <% event.attendants.each do |user| %>
                <%= cl_image_tag user.profile_photo, width: 70, class: "avatar-bordered" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>




  <div
    class="mapbox"
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>


</div>

