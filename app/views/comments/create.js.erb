function refreshForm(innerHTML) {
  const newCommentForm = document.getElementById('comments-form');
  newCommentForm.innerHTML = innerHTML;
}

function addComment(commentHTML) {
  const comments = document.getElementById('comments-display');
  comments.insertAdjacentHTML('beforeend', commentHTML);
}

<% if @comment.errors.any? %>
  refreshForm('<%= j render "comments/form", spot: @spot, comment: @comment %>');
<% else %>
  addComment('<%= j render "comments/show", comment: @comment %>');
  refreshForm('<%= j render "comments/form", spot: @spot, comment: comment.new %>');
<% end %>
