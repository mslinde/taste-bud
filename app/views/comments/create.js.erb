function refreshForm(innerHTML) {
  const newCommentForm = document.getElementById('comments-form');
  newCommentForm.innerHTML = innerHTML;
}

function addComment(commentHTML) {
  console.log(commentHTML)
  const comments = document.getElementById('comments-display');
  comments.insertAdjacentHTML('beforeend', commentHTML);
}

<% if @comment.errors.any? %>
  refreshForm('<%= j render "comments/form", event: @spot_occupied, comment: @comment %>');
<% else %>
  addComment('<%= j render "comments/comments", comment: @comment %>');
  refreshForm('<%= j render "comments/form", spot: @spot_occupied, comment: Comment.new %>');
<% end %>
