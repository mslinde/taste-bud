<div class="comment-details">
  <em><%= comment.created_at.strftime("  today at %I:%M %p") %></em>
    <% if current_user.id == comment.user.id %>
      <%= link_to spot_comment_path(@spot_occupied, comment), method: :delete do%><i class="fas fa-trash-alt"></i>
      <% end %>
    <% end %>
</div>
<div class="comment-content">
  <p><%= comment.note %></p>
</div>
<div class="comments-user-info">
  <p>-<%= comment.user.full_name %> <%= cl_image_tag comment.user.profile_photo, class: "avatar-comment" %></p>
</div>

