<div class="comments-display">
  <% @event.comments.each do |comment|  %>
  <span><%= comment.created_at.strftime("  today at %I:%M %p") %></span></p>
    <div class="comment-content">
      <em><%= comment.note %>  </em>
      <% if current_user %>
        <%= link_to "delete", spot_comment_path(comment), method: :delete %>
      <% end %>
    </div>
  <div class="comments-user-info">
      <p>-<%= comment.user.full_name %>
      <%= cl_image_tag comment.user.profile_photo, class: "avatar-comment" %>
  </div>
  <% end %>
</div>
