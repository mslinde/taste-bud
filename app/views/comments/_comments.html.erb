<div class="comments-display">
  <% @event.comments.each do |comment|  %>
    <%= cl_image_tag comment.user.profile_photo, class: "avatar-bordered" %>
    <p><%= comment.user.full_name %>:</p>
    <p><%= comment.created_at.strftime("Today at %I:%M %p")   %></p>
    <p><%= comment.note %></p>
  <% end %>
</div>
