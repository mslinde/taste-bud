
<div class="container mt-4">
  <div class="review-container">
    <div class="row d-flex">
      <div class="form-left  col-xm-12 col-md-6">
        <h1 style="padding-top: 47px; text-align: left;">Leave a review for <br><%= @spot.event.title %></h1></br></h1>
          <%= cl_image_tag @event.user.profile_photo, class: "avatar-bordered" %>
          <% @event.attendants.each do |user| %>
            <%= cl_image_tag user.profile_photo, class: "avatar-bordered" %>
          <% end %>
        <h3 style="padding-top: 35px; text-align: left;">On a scale of 1-5, how was the...</h3>
          <%= render "form" %>
      </div>
      <div class="detail-right col-xs-12 col-md-6">
        <div class="show-img-container">
          <%= cl_image_tag @event.photo, class: "show-img"  %>
          <%= render "event_details" %>
        </div>
      </div>
    </div>
  </div>
</div>


